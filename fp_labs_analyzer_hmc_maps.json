{
    "generic": {
    "__comment__": "mode: interactive_local, interactive_remote, cmd",
    "mode": "cmd",
    "path_home": null,
    "path_root_data_static": "$HOME/fp_labs_datasets/data_static/",
    "path_root_data_dynamic_source": "$HOME/fp_labs_datasets/data_dynamic/maps/",
    "path_root_data_dynamic_destination": "$HOME/fp_labs_datasets/images/maps/",
    "domain_name": "marche",
    "type": "nrt"
  },
  "case_study" : {
    "description": "evento_novembre_2022",
    "time_analysis" : "2022-11-17 12:00",
    "time_start": null,
    "time_end": null,
    "time_frequency": "H",
    "time_period_right": 24,
    "time_period_left": 24
  },
  "template": {
    "path": {
      "path_root_data_static": "string_path_root_data_static",
      "path_root_data_dynamic_source": "string_path_root_data_dynamic_source",
      "path_root_data_dynamic_destination": "string_path_root_data_dynamic_destination"
    },
    "geo": {
      "domain_name": "domain_name_string"
    },
    "variable": {
      "var_name": "var_name_string"
    },
    "time": {
      "maps_datetime_forcing": "%Y%m%d%H%M",
      "maps_sub_path_forcing": "%Y%m%d",
      "maps_datetime_results": "%Y%m%d%H%M",
      "maps_sub_path_results": "%Y%m%d",
      "plot_datetime": "%Y%m%d%H%M",
      "plot_sub_path": "%Y%m%d"
    }
  },
  "variables": {
    "forcing": {
      "time": "times",
      "rain": "Rain",
      "air_temperature": "Air_Temperature",
      "relative_humidity": "Relative_Humidity"
    },
    "results": {
      "time": "times",
      "soil_moisture": "SM",
      "land_surface_temperature": "LST"
    }
  },
  "data" : {
    "static": {
      "terrain": {
        "folder_name": "{path_root_data_static}/gridded_marche/",
        "file_name": "marche.dem.txt"
      },
      "river_network": {
        "folder_name": "{path_root_data_static}/gridded_marche/",
        "file_name": "marche.choice.txt"
      },
      "sections": {
        "folder_name": "{path_root_data_static}/shapefile_marche/",
        "file_name": "fp_sections_marche.shp"
      }
    },
    "dynamic": {
      "source": {
        "maps_forcing": {
          "folder_name": "{path_root_data_dynamic_source}/forcing/weather_stations_realtime/{maps_sub_path_forcing}/",
          "file_name": "ws.db.{maps_datetime_forcing}.nc.gz",
          "time_reference": "2022-11-17"
        },
        "maps_results": {
          "folder_name": "{path_root_data_dynamic_source}/results/weather_stations_realtime/{maps_sub_path_results}/",
          "file_name": "hmc.output-grid.{maps_datetime_results}.nc.gz",
          "time_reference": "2022-11-17"
        }
      },
      "destination": {
        "maps_forcing": {
          "folder_name": "{path_root_data_dynamic_destination}/forcing/weather_stations_realtime/",
          "file_name": "hmc.forcing_{var_name}.{plot_datetime}.png"
        },
        "maps_results": {
          "folder_name": "{path_root_data_dynamic_destination}/results/weather_stations_realtime/",
          "file_name": "hmc.outcome_{var_name}.{plot_datetime}.png"
        }
      }
    }
  },
  "log": {
    "folder_name": "$HOME/fp_labs_apps/tmp/",
    "file_name": "fp_labs_maps_logging.txt"
  }
}
